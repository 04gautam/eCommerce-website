
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Card</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<!-- Display Cart Message -->
  <% if(products.length <= 0){ %>
  <div class="h-screen grid content-center justify-center container text-center ">
      <h1 class="text-red-600 text-2xl font-bold">No Item matched</h1>
      <h1 class="text-gray-700">Searched Item will be available soon...</h1>
   
    <% } %>
  </div>

<body class="bg-gray-100 font-sans">
  <!-- Header -->
   
   <div class="mb-10">

     <%- include('../partials/header') %>
   </div>

  
  
  <!-- Display Cart Message -->
  

  <!-- Product Grid -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% products.forEach((ele) => { %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Product Image -->
        <img 
          src="data:image/jpeg;base64,<%= ele.image.toString('base64') %>" 
          alt="Product Image" 
          class="w-full h-56 object-cover"
        >

        <!-- Product Details -->
        <div class="p-4">
          <!-- Product Name -->
          <h2 class="text-lg font-semibold text-gray-800"><%= ele.name %></h2>

          <!-- Product Description -->
          <p class="text-gray-600 text-sm mt-2">
            This is a brief description of the product. It highlights the key features and benefits.
            and this is hard coded text.
          </p>

          <!-- Price and Button -->
           <div class="flex items-center mt-4 justify-between">
          <div>
            <span class="text-xl font-bold text-indigo-600">&#x20b9; <%= ele.price %></span>
            <span class="text-xl ml-2 text-red-600"><%= ele.discount%>% off</span>
           </div>
            <!-- Add to Cart Button -->
            <a href="/cart/<%= ele._id %>" 
              class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
              Add to Cart
            </a>
           
            </a>
    


          </div>
           
        </div>

      </div>

      <% }) %>
    </div>

  </div>
  
</body>
