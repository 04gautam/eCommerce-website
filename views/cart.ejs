<body class="bg-gray-100 font-sans">
  <!-- Header -->
   <div class="mb-10">
     <%- include('../partials/header') %>

   </div>
  
  <!-- Display Cart Message -->
  <% if(cartUser.length <= 0){ %>
  <div class="h-screen grid content-center justify-center container text-center ">
      <h1 class="text-red-600 text-2xl font-bold">Cart is empty</h1>
      <h1 class="text-gray-700">Add something Please..</h1>
   
    <% } %>
  </div>

  <!-- Cart Items Grid -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% cartUser.forEach((cart) => { %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Product Image -->
        <img 
          src="data:image/jpeg;base64,<%= cart.image.toString('base64') %>" 
          alt="Product Image" 
          class="w-full h-56 object-cover"
        >
  
        <!-- Product Details -->
        <div class="p-4">
          <!-- Product Name -->
          <h2 class="text-lg font-semibold text-gray-800"><%= cart.name %></h2>
  
          <!-- Product Description -->
          <p class="text-gray-600 text-sm mt-2">
            <%=cart.discription%>
          </p>
  
          <!-- Price and Buttons -->
          <div class="flex items-center justify-between mt-4">
            <span class="text-xl font-bold text-indigo-600">&#x20b9; <%= cart.price %></span>
          </div>
          <div class="flex space-x-4 mt-4">
            <!-- Buy Button -->
            <a href="/buy/<%= cart._id %>" 
              class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
              Buy
            </a>
            <!-- Delete Button -->
            <a href="/delete/<%= cart._id %>" 
              class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
              Delete
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
